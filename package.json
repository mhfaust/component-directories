{
  "name": "component-directories",
  "displayName": "Compnoent Directories",
  "description": "Generate and and rename components as files grouped by a directory. Language and framework agnostic",
  "icon": "icon-multifile.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createDefault",
        "title": "Create (Full)"
      },
      {
        "command": "extension.createAltComponent",
        "title": "Create (Choose Type)..."
      },
      {
        "command": "extension.renameComponent",
        "title": "Rename"
      },
      {
        "command": "extension.addComponentFiles",
        "title": "Add Files..."
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "component.actions",
          "group": "navigation@1"
        }
      ],
      "component.actions": [
        {
          "command": "extension.createDefault",
          "group": "1_create@1"
        },
        {
          "command": "extension.createAltComponent",
          "group": "1_create@2"
        },
        {
          "command": "extension.renameComponent",
          "group": "2_modify@1"
        },
        {
          "command": "extension.addComponentFiles",
          "group": "2_modify@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "component.actions",
        "label": "Component",
        "icon": "$(symbol-class)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
